{
  "expo": {
    "name": "BeWell",
    "slug": "bewellapp",
    "description": "Wellbeing Tracker, Open Source & Private",
    "privacy": "public",
    "sdkVersion": "39.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "cover"
    },
    "updates": {
      "checkAutomatically": "ON_ERROR_RECOVERY",
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "icon": "./src/assets/images/icon-ios.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.letsbewell.bewellapp",
      "buildNumber": "1.0.1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to let the user pick a photo and save it into the app's storage."
      }
    },
    "android": {
      "icon": "./src/assets/images/icon-android.png",
      "package": "com.letsbewell.bewellapp",
      "versionCode": 2,
      "permissions": [
        "READ_EXTERNAL_STORAGE", 
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    }
  }
}
